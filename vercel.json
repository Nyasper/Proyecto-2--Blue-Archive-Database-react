{
	"version": 2,
	"builds": [
		{
			"src": "server/src/index.ts",
			"use": "@vercel/node",
			"config": {
				"includeFiles": ["client/dist/**"]
			}
		}
	],
	"routes": [
		{
			"src": "/(.*)",
			"dest": "server/api/serverless.ts"
		}
	],
	"rewrites": [
		{
			"source": "/(.*)",
			"destination": "server/api/serverless.ts"
		}
	]
}
